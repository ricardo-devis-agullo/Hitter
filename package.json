{
  "name": "hitter",
  "version": "0.0.10",
  "description": "A simple library for hit requests",
  "main": "dist/bundle.js",
  "module": "dist/module.js",
  "scripts": {
    "build": "rollup -c",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "prepare": "npm run build",
    "test": "npm run lint && jest --coverage",
    "coveralls": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.{ts,js,json,css}": [
        "prettier --single-quote --trailing-comma es5 --write",
        "git add"
      ]
    }
  },
  "author": "Ricardo Devis Agullo <mkredz@gmail.com>",
  "repository": "git://github.com/ricardo-devis-agullo/Hitter.git",
  "homepage": "https://github.com/ricardo-devis-agullo/Hitter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ricardo-devis-agullo/Hitter/issues"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "coveralls": "3.0.4",
    "husky": "2.7.0",
    "jest": "24.8.0",
    "lint-staged": "13.1.0",
    "prettier": "1.18.2",
    "rollup": "0.53.3",
    "rollup-plugin-typescript": "0.8.1",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.5.2"
  }
}
